[Unit]
Description=Pinox API (FastAPI/Uvicorn)
After=network-online.target
Wants=network-online.target

[Service]
User=lppou
WorkingDirectory=/home/lppou/pinox
EnvironmentFile=/home/lppou/pinox/.env
ExecStart=/home/lppou/pinox/.venv/bin/uvicorn nox_api.api.nox_api:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target